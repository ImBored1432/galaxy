-- ðŸŒŒ Galaxy ESP V3 - No Outline, Executor Ready
-- Replace with your animated galaxy texture
local galaxyTexture = "rbxassetid://1234567890" 

local Players = game:GetService("Players")

-- Function to add galaxy ESP effect
local function addGalaxyEffect(character)
    if not character:FindFirstChild("HumanoidRootPart") then return end

    -- Prevent duplicates
    if character:FindFirstChild("GalaxyESP_Highlight") then return end

    -- Highlight (glow only, NO outline)
    local highlight = Instance.new("Highlight")
    highlight.Name = "GalaxyESP_Highlight"
    highlight.FillColor = Color3.fromRGB(120, 0, 255) -- deep purple glow
    highlight.FillTransparency = 0.35
    highlight.OutlineColor = highlight.FillColor -- blend outline away
    highlight.OutlineTransparency = 1 -- fully invisible
    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
    highlight.Parent = character

    -- Galaxy swirl particles
    local particle = Instance.new("ParticleEmitter")
    particle.Name = "GalaxyESP_Particles"
    particle.Texture = galaxyTexture
    particle.Rate = 25
    particle.Lifetime = NumberRange.new(3, 6)
    particle.Speed = NumberRange.new(0.3, 0.7)
    particle.Rotation = NumberRange.new(0, 360)
    particle.RotSpeed = NumberRange.new(-40, 40) -- swirl animation
    particle.SpreadAngle = Vector2.new(360, 360)
    particle.Transparency = NumberSequence.new({
        NumberSequenceKeypoint.new(0, 0),
        NumberSequenceKeypoint.new(0.8, 0.3),
        NumberSequenceKeypoint.new(1, 1)
    })
    particle.Size = NumberSequence.new({
        NumberSequenceKeypoint.new(0, 2),
        NumberSequenceKeypoint.new(0.5, 4),
        NumberSequenceKeypoint.new(1, 0)
    })
    particle.Parent = character.HumanoidRootPart
end

-- Hook onto all players
for _, player in ipairs(Players:GetPlayers()) do
    if player ~= Players.LocalPlayer then
        if player.Character then
            addGalaxyEffect(player.Character)
        end
        player.CharacterAdded:Connect(addGalaxyEffect)
    end
end

Players.PlayerAdded:Connect(function(player)
    if player ~= Players.LocalPlayer then
        player.CharacterAdded:Connect(addGalaxyEffect)
    end
end)

print("âœ… Galaxy ESP V3 Loaded - No Outline")
